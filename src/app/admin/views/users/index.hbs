{{!-- src/app/views/admin/users/index.hbs --}}
{{!< layouts/admin}} {{!-- Sử dụng layout admin (nếu có). Nếu không có, bỏ dòng này. --}} <h1>Quản Lý Người Dùng</h1>

    <a href="/admin/users/create" class="btn btn-primary">Thêm Người Dùng</a> {{!-- Nút thêm mới (nếu bạn có chức năng
    này) --}}

    {{#if users}} {{!-- Kiểm tra xem có danh sách users không --}}
    <table class="table"> {{!-- Sử dụng class 'table' của Bootstrap (nếu bạn dùng Bootstrap) --}}
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Vai trò</th> {{!-- Thêm cột "Vai trò" (role) --}}
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.id}}</td> {{!-- Hiển thị ID (nếu có) --}}
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td> {{!-- Hiển thị vai trò --}}
                <td>
                    <a href="/admin/users/{{this._id}}" class="btn btn-info btn-sm">Xem</a>
                    <a href="/admin/users/{{this._id}}/edit" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/admin/users/{{this._id}}/delete" class="btn btn-danger btn-sm">Xóa</a>
                    {{!-- Các nút chức năng. Thay đổi đường dẫn nếu cần. --}}
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5">Không có người dùng nào.</td> {{!-- Hiển thị nếu không có user --}}
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>Không có người dùng nào.</p> {{!-- Hiển thị nếu không có user --}}
    {{/if}}