{{!-- src/app/admin/views/users/confirm-delete.hbs --}}
{{!< layouts/admin}} <h1 class="mt-4 mb-4">Xác nhận xóa người dùng</h1>

    <p class="alert alert-danger">
        Bạn có chắc chắn muốn xóa người dùng <strong>{{user.username}}</strong> ({{user.email}})? Hành động này không
        thể hoàn tác.
    </p>

    <form action="/admin/users/{{user._id}}?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="/admin/users" class="btn btn-secondary">Hủy</a>
    </form>