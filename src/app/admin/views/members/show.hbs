{{!-- src/app/views/admin/members/show.hbs --}}
{{!< layouts/admin}} <h1>{{member.name}}</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="/{{member.image}}" alt="{{member.name}}" class="img-fluid">
        </div>
        <div class="col-md-8">
            <p><strong>Vai trò:</strong> {{member.role}}</p>
            <p><strong>Tiểu sử:</strong> {{member.bio}}</p>
            {{#if member.band}}
            <p><strong>Ban nhạc:</strong> {{member.band.name}}</p>
            {{/if}}

            <div>
                <a href="/admin/members/{{member.slug}}/edit" class="btn btn-warning">Sửa</a>
                <a href="/admin/members/{{member.slug}}/delete" class="btn btn-danger">Xóa</a>
                <a href="/admin/members" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>