{{!< layouts/admin}} <div class="container mt-4">
    <h1>Chi Tiết Liên Hệ</h1>

    <div class="card">
        <div class="card-body">
            <p><strong>Tên:</strong> {{contact.name}}</p>
            <p><strong>Email:</strong> {{contact.email}}</p>
            <p><strong>Điện thoại:</strong> {{contact.phone}}</p>
            <p><strong>Tiêu đề:</strong> {{contact.subject}}</p>
            <p><strong>Nội dung:</strong></p>
            <p>{{contact.message}}</p>
            <p><strong>Ngày gửi:</strong> {{dateFormat contact.createdAt "DD/MM/YYYY HH:mm"}}</p>
            <p><strong>Trạng thái:</strong> {{contact.status}}</p>
            <p>
                <strong>Đã đọc:</strong>
                {{#if contact.isRead}}
                <span class="badge badge-success">Đã đọc</span>
                {{else}}
                <span class="badge badge-warning">Chưa đọc</span>
                {{/if}}
            </p>

            <a href="/admin/contacts" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
    </div>