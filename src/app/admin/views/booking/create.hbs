{{!-- src/app/site/views/booking/create.hbs --}}
<h2>Đặt lịch biểu diễn</h2>

{{#if errors}}
<div class="alert alert-danger">
    <ul>
        {{#each errors}}
        <li>{{this.msg}}</li> {{!-- Hoặc this.message, tùy thuộc vào cấu trúc lỗi --}}
        {{/each}}
    </ul>
</div>
{{/if}}

<form action="/booking" method="POST">
    <div>
        <label for="name">Tên:</label>
        <input type="text" id="name" name="name" value="{{#if errors}}{{body.name}}{{/if}}" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{#if errors}}{{body.email}}{{/if}}" required>
    </div>
    <div>
        <label for="phone">Số điện thoại:</label>
        <input type="tel" id="phone" name="phone" value="{{#if errors}}{{body.phone}}{{/if}}" required>
    </div>
    <div>
        <label for="date">Ngày:</label>
        <input type="date" id="date" name="date" value="{{#if errors}}{{body.date}}{{/if}}" required>
    </div>
    <div>
        <label for="time">Thời gian:</label>
        <input type="time" id="time" name="time" value="{{#if errors}}{{body.time}}{{/if}}" required>
        {{!-- Sửa type="text" thành type="time" --}}
    </div>
    <div>
        <label for="venue">Địa điểm:</label>
        <input type="text" id="venue" name="venue" value="{{#if errors}}{{body.venue}}{{/if}}" required>
    </div>
    <div>
        <label for="message">Tin nhắn:</label>
        <textarea id="message" name="message">{{#if errors}}{{body.message}}{{/if}}</textarea>
    </div>
    <div>
        <label for="band">Band:</label>
        <select name="band" id="band" required>
            <option value="">Chọn ban nhạc</option> {{!-- Thêm option mặc định --}}
            {{#each bands}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit">Đặt lịch</button>
</form>