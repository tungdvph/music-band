<h2>Chỉnh Sửa Đặt Lịch</h2>

<form action="/admin/bookings/{{booking._id}}?_method=PUT" method="POST">
    {{!-- ... các trường thông tin như create.hbs ... --}}
    <div>
        <label for="name">Tên:</label>
        <input type="text" id="name" name="name" value="{{booking.name}}">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{booking.email}}">
    </div>
    <div>
        <label for="phone">Số điện thoại:</label>
        <input type="tel" id="phone" name="phone" value="{{booking.phone}}">
    </div>
    <div>
        <label for="date">Ngày:</label>
        <input type="date" id="date" name="date" value="{{booking.date}}">
    </div>
    <div>
        <label for="time">Thời gian:</label>
        <input type="time" id="time" name="time" value="{{booking.time}}">
    </div>
    <div>
        <label for="venue">Địa điểm:</label>
        <input type="text" id="venue" name="venue" value="{{booking.venue}}">
    </div>
    <div>
        <label for="message">Tin nhắn:</label>
        <textarea id="message" name="message">{{booking.message}}</textarea>
    </div>
    <div>
        <label for="band">Band:</label>
        <select name="band" id="band">
            {{#each bands}}
            <option value="{{this._id}}" {{#if (eq ../booking.band this._id)}}selected{{/if}}>
                {{this.name}}
            </option>
            {{/each}}
        </select>
    </div>
    <div>
        <label for="status">Trạng thái:</label>
        <select name="status" id="status">
            <option value="pending" {{#if (eq booking.status "pending" )}}selected{{/if}}>Đang chờ</option>
            <option value="confirmed" {{#if (eq booking.status "confirmed" )}}selected{{/if}}>Đã xác nhận</option>
            <option value="canceled" {{#if (eq booking.status "canceled" )}}selected{{/if}}>Đã hủy</option>
        </select>
    </div>

    <button type="submit">Cập nhật</button>
</form>