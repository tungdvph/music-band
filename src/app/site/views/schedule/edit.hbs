{{!-- src/app/views/schedule/edit.hbs --}}
<h2>Chỉnh sửa lịch trình</h2>
{{#if errors}}
<div class="alert alert-danger">
        <ul>
                {{#each errors}}
                <li>{{this.msg}}</li>
                {{/each}}
            </ul>
</div>
{{/if}}
<form action="/schedule/{{schedule.slug}}?_method=PUT" method="POST">

        <div>
                <label for="title">Tiêu đề:</label>
                <input type="text" id="title" name="title" value="{{schedule.title}}">
            </div>
        <div>
                <label for="date">Ngày:</label>
                <input type="date" id="date" name="date" value="{{dateFormat schedule.date 'YYYY-MM-DD'}}">
            </div>
        <div>
                <label for="time">Thời gian:</label>
                <input type="text" id="time" name="time" value="{{schedule.time}}">
            </div>
    <div>
        <label for="venue">Địa điểm:</label>
        <input type="text" id="venue" name="venue" value="{{schedule.venue}}">
    </div>
    <div>
        <label for="address">Địa chỉ:</label>
        <input type="text" id="address" name="address" value="{{schedule.address}}">
    </div>
    <div>
        <label for="image">Ảnh:</label>
        <input type="text" id="image" name="image" value="{{schedule.image}}">
    </div>
    <div>
        <label for="band">Band:</label>
            <select name="band" id="band">
                    {{#each bands}}
                    <option value="{{this._id}}" {{#if (eq ../schedule.band this._id)}}selected{{/if}}>{{this.name}}
            </option>
                    {{/each}}
                </select>
    </div>
    <div>
        <label for="description">Mô tả:</label>
        <textarea id="description" name="description">{{schedule.description}}</textarea>
    </div>
        <button type="submit">Cập nhật</button>
</form>