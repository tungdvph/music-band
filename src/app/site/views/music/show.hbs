{{!-- src/app/views/music/show.hbs --}}

<div class="song-detail">
    <h1>{{song.title}}</h1>

    {{#if song.imageUrl}}
    <img src="{{song.imageUrl}}" alt="{{song.title}}">
    {{/if}}

    <p class="artist">
        <strong>Artist:</strong>
        {{!-- Sử dụng helper isObject --}}
        {{#if (isObject song.artist)}}
        <a href="/artists/{{song.artist.slug}}">{{song.artist.name}}</a> {{!-- Giả sử bạn có route /artists/:slug --}}
        {{else}}
        {{song.artist}}
        {{/if}}
    </p>

    {{#if song.audioUrl}}
    <div class="audio-player">
        <audio controls>
            <source src="{{song.audioUrl}}" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
    </div>
    {{/if}}

    {{#if song.lyrics}}
    <div class="lyrics">
        <h2>Lyrics</h2>
        <pre>{{song.lyrics}}</pre>
    </div>
    {{/if}}

    {{#if song.createdAt}}
    <p>Create at: {{dateFormat song.createdAt "DD/MM/YYYY HH:mm:ss"}}</p>
    {{/if}}

    {{#if song.updatedAt}}
    <p>Update at: {{dateFormat song.updatedAt "DD/MM/YYYY HH:mm:ss"}}</p>
    {{/if}}
    <a href="/music/{{song.slug}}/edit">Sửa bài hát</a>
    <a href="/music/{{song.slug}}/delete">Xóa bài hát</a>
</div>

