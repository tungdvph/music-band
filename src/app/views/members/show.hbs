{{!-- src/app/views/members/show.hbs --}}

<h2>{{member.name}}</h2>

<p>Vai trò: {{member.role}}</p>
<p>{{member.bio}}</p>
<img src="{{member.image}}" alt="{{member.name}}">

{{#if member.band}}
<p>Ban nhạc: {{member.band.name}}</p>
{{/if}}

<div>
    <a href="/members/{{member.slug}}/edit" class="btn btn-warning">Sửa</a>
    <a href="/members/{{member.slug}}/delete" class="btn btn-danger">Xóa</a>
    <a href="/members" class="btn btn-secondary">Quay lại danh sách</a>
</div>